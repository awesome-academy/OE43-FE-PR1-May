mixin productSidebarPromotional(img)
    li.product-sidebar__promotional--item
        a.product-sidebar__promotional--link(href="product-details.html")
            .product-sidebar__promotional--img 
                img(src= img, alt="promotional image")
            .product-sidebar__promotional--info 
                h3.product-sidebar__promotional--name Máy khoan black decker loại 1
                p.product-sidebar__promotional--price 1.550.000 Đ

mixin productCategory 
    .product-sidebar__category
        span.product-sidebar__link.product-sidebar__title
            i.fas.fa-bars.window-icon-yl
            |Danh mục sản phẩm
        ul.product-sidebar__list 
            each item in categoryItems
                +productSidebarItem(item)

mixin sidebarPromotional 
    .product-sidebar__promotional
        span.product-sidebar__link.product-sidebar__title
            i.fas.fa-gift.window-icon-yl
            |Sản phẩm khuyến mại
        ul.product-sidebar__list 
            each item in sidebarImgs 
                +productSidebarPromotional(sidebarImgSrc+item)

mixin blogSidebar 
    .blogs-sidebar 
        +productCategory
        .blogs-category
            h4.blogs-category__title 
                i.fas.fa-th-large.window-icon-yl 
                |Danh mục tin tức
            ul.blogs-category__list 
                each item in blogsCategory      
                    li.blogs-category__item 
                        a.blogs-category__link(href="#")= item
        .blogs-images-lib 
            h4.blogs-category__title 
                i.fas.fa-th-large.window-icon-yl 
                |Thư viện hình ảnh
            .blogs-images-lib__list
                each image,i in blogSidebarImgs
                    span.blogs-images-lib__img
                        img(src=blogSidebarImgSrc+image, alt="blog sidebar "+(i+1))
        .blogs-tags
            h4.blogs-category__title 
                i.fas.fa-th-large.window-icon-yl 
                |Thẻ tags
            .blogs-tags__list
                each item in blogTags 
                    a.blogs-tags__link(href="#")= item
