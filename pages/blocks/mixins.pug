mixin productSidebarItem(item)
    li.product-sidebar__item 
        a.product-sidebar__link(href="#")
            i.fas.fa-th-large.window-icon-gr
            = item
            
mixin productItemBox(img)
    .products__item.text-center 
        .products__box 
            img.products__img(src= img, alt="product item")
            p.products__price 1.550.000 Đ
            h4.products__name Máy khoan Black Decker 
            span.products__rate 
                each i in [1, 2, 3, 4]
                    i.fas.fa-star
                i.far.fa-star
            i.products__rate-num (12 Đánh giá)
            .products__btns 
                a(href="#").products__btn--buy Mua ngay 
                a(href="product-details.html").products__btn--see-details Xem chi tiết

